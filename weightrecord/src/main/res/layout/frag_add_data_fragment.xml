<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1d2126"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_data_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_data_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_6a6a6a"
            android:text="@string/delete"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/bt_data_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_theme_blue"
            android:text="@string/delete"
            android:textColor="@android:color/white" />
    </LinearLayout>
</FrameLayout>