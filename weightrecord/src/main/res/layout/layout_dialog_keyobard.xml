<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4">

        <Button
            android:id="@+id/bt_one"
            style="@style/styleKeyboard"
            android:text="1" />

        <Button
            android:id="@+id/bt_two"
            style="@style/styleKeyboard"
            android:text="2" />

        <Button
            android:id="@+id/bt_three"
            style="@style/styleKeyboard"
            android:text="3" />

        <Button
            android:id="@+id/bt_four"
            style="@style/styleKeyboard"
            android:text="4" />

        <Button
            android:id="@+id/bt_five"
            style="@style/styleKeyboard"
            android:text="5" />

        <Button
            android:id="@+id/bt_six"
            style="@style/styleKeyboard"
            android:text="6" />

        <Button
            android:id="@+id/bt_seven"
            style="@style/styleKeyboard"
            android:text="7" />

        <Button
            android:id="@+id/bt_eight"
            style="@style/styleKeyboard"
            android:text="8" />

        <Button
            android:id="@+id/bt_nine"
            style="@style/styleKeyboard"
            android:text="9" />

        <Button
            style="@style/styleKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_zero"
            style="@style/styleKeyboard"
            android:text="0" />

        <Button
            android:id="@+id/bt_dot"
            style="@style/styleKeyboard"
            android:text="." />

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_ok"
            style="@style/styleKeyboard"
            android:text="确认" />

        <Button
            android:id="@+id/bt_cancel"
            style="@style/styleKeyboard"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>