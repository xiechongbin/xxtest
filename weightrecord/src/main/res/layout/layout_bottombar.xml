<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bottomBar_ll_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bottom_weight"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_weight_normal" />

            <TextView
                android:id="@+id/tv_bottom_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/label_weight"
                android:textColor="@color/color_9b9c9b"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBar_ll_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bottom_photo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_photo_normal" />

            <TextView
                android:id="@+id/tv_bottom_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/title_photo"
                android:textColor="@color/color_9b9c9b"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBar_ll_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bottom_log"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_log_normal" />

            <TextView
                android:id="@+id/tv_bottom_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/label_Log"
                android:textColor="@color/color_9b9c9b"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBar_ll_calendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bottom_calendar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_calendar_normal" />

            <TextView
                android:id="@+id/tv_bottom_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/title_calendar"
                android:textColor="@color/color_9b9c9b"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBar_ll_resource"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bottom_resource"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_resource_normal" />

            <TextView
                android:id="@+id/tv_bottom_resource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/label_resource"
                android:textColor="@color/color_9b9c9b"
                android:textSize="10sp" />
        </LinearLayout>
    </RadioGroup>

</LinearLayout>