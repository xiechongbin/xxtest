<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_theme_blue"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_trend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/label_trend_analysis"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_type_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_trend_menu"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/img_trend_menu" />

            <TextView
                android:id="@+id/tv_trend_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_weight"
                android:textColor="@android:color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="0.2dp"
            android:layout_height="18dp"
            android:layout_marginLeft="15dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/ll_open_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_open"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/img_trend_open" />

            <TextView
                android:id="@+id/tv_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_open"
                android:textColor="@android:color/white"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trend_bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_last_seven_days"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/img_up_or_down"
                    android:src="@drawable/img_trend_value_down" />

                <TextView
                    android:id="@+id/tv_last_seven_days_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_last_seven_days_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_last_7days"
                android:textColor="@color/color_9b9c9b"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trend_bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_this_month_to_today"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/img_up_or_down"
                    android:src="@drawable/img_trend_value_down" />

                <TextView
                    android:id="@+id/tv_this_month_to_today_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_this_month_to_today_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_month2date"
                android:textColor="@color/color_9b9c9b"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trend_bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_this_year_to_today"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/img_up_or_down"
                    android:src="@drawable/img_trend_value_down" />

                <TextView
                    android:id="@+id/tv_this_year_to_today_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_this_year_to_today_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本年至今"
                android:textColor="@color/color_9b9c9b"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trend_bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_everyday"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/img_up_or_down"
                    android:src="@drawable/img_trend_value_down" />

                <TextView
                    android:id="@+id/tv_everyday_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_everyday_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_daily"
                android:textColor="@color/color_9b9c9b"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trend_bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_every_week"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/img_up_or_down"
                    android:src="@drawable/img_trend_value_down" />

                <TextView
                    android:id="@+id/tv_every_week_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_every_week_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_weekly"
                android:textColor="@color/color_9b9c9b"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trend_bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_every_month"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/img_up_or_down"
                    android:src="@drawable/img_trend_value_down" />

                <TextView
                    android:id="@+id/tv_every_month_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_every_month_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_monthly"
                android:textColor="@color/color_9b9c9b"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_future"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trend_future_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_prediction"
                android:textColor="@color/color_theme_green"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_future_seven_days_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/color_theme_green"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_future_seven_days_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_theme_green"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trend_future_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_prediction"
                android:textColor="@color/color_theme_green"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_future_end_of_month_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/color_theme_green"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_future_end_of_month_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_theme_green"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trend_future_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_prediction"
                android:textColor="@color/color_theme_green"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_future_end_of_year_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/color_theme_green"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_future_end_of_year_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_theme_green"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>