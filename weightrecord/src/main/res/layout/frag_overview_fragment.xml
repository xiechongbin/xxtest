<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_theme_blue"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/resource"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:id="@+id/overview_ll_sex"
                style="@style/Style_OverView_LinearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/overview_tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/man"
                    android:textColor="@color/color_696969"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/overview_ll_birthday"
                style="@style/Style_OverView_LinearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/birthday"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/overview_tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="1991-1-27"
                    android:textColor="@color/color_696969"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/overview_ll_height"
                style="@style/Style_OverView_LinearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/overview_tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5'7''"
                    android:textColor="@color/color_696969"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/overview_ll_weight"
                style="@style/Style_OverView_LinearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/overview_tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.28st"
                    android:textColor="@color/color_696969"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </GridLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/color_theme_blue"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/healthy_weight"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:id="@+id/overview_ll_healthy_range_weight"
                style="@style/Style_OverView_LinearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/overview_tv_weight_healthy_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.66-11.51"
                    android:textColor="@color/color_696969"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/overview_tv_current_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_current"
                    android:textColor="@color/color_c2c2c2"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/overview_ll_healthy_range_bmi"
                style="@style/Style_OverView_LinearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_bmi"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/overview_tv_bmi_healthy_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18.5-24.9"
                    android:textColor="@color/color_696969"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/overview_tv_current_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_current"
                    android:textColor="@color/color_c2c2c2"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/overview_ll_healthy_range_fat"
                style="@style/Style_OverView_LinearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_fat"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/overview_tv_fat_healthy_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5%-25%"
                    android:textColor="@color/color_696969"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/overview_tv_current_fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_current"
                    android:textColor="@color/color_c2c2c2"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/overview_ll_healthy_range_whr"
                style="@style/Style_OverView_LinearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="label_whr"
                    android:textColor="@color/color_696969"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/overview_tv_whr_healthy_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.9"
                    android:textColor="@color/color_696969"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/overview_tv_current_whr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_current"
                    android:textColor="@color/color_c2c2c2"
                    android:textSize="14sp" />
            </LinearLayout>
        </GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>