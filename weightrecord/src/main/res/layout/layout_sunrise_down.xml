<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_aqi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="@string/weather_sunrise"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.xiaoxie.weightrecord.weather.view.SunRiseView
            android:id="@+id/sunRise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:dashEffectLength="5dp"
            app:paddingBottom="10dp"
            app:paddingLeft="20dp"
            app:paddingRight="20dp"
            app:paddingTop="10dp"
            app:pictureSize ="30dp"/>
    </LinearLayout>
</LinearLayout>