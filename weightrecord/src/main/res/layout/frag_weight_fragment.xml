<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.xiaoxie.weightrecord.view.DashBoardView
                android:id="@+id/weight_dashBoardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_theme_blue" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="245dp">
                <!---->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="true"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="31天"
                                    android:textColor="@color/color_cac6c8"
                                    android:textSize="11sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_weight_down" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.22"
                                        android:textColor="@color/color_707070"
                                        android:textSize="21sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="最新进展"
                                    android:textColor="@color/color_cac6c8"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="55天"
                                    android:textColor="@color/color_cac6c8"
                                    android:textSize="11sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_weight_down" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.29"
                                        android:textColor="@color/color_707070"
                                        android:textSize="21sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="总进度"
                                    android:textColor="@color/color_cac6c8"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="201天"
                                    android:textColor="@color/color_cac6c8"
                                    android:textSize="11sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_weight_down" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.22"
                                        android:textColor="@color/color_707070"
                                        android:textSize="21sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="距离目标"
                                    android:textColor="@color/color_cac6c8"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="125dp"
                            android:src="@color/color_e2e2e2" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="60dp"
                            android:src="@color/color_e2e2e2" />


                    </FrameLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:src="@color/color_e2e2e2" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:text="开始2017年6月27日"
                            android:textColor="@color/color_cac6c8"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/color_theme_blue"
                            android:text=" 11%"
                            android:textColor="@android:color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="2018年3月10日结束"
                            android:textColor="@color/color_cac6c8"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <com.xiaoxie.weightrecord.view.CustomProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true">

                            <TextView
                                android:id="@+id/tv_current_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"
                                android:text="12.57"
                                android:textColor="@color/color_696969"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_current_weight"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:background="@color/color_theme_blue"
                                    android:gravity="center"
                                    android:text="BMI"
                                    android:textColor="@android:color/white"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/shape_bmi"
                                    android:gravity="center"
                                    android:text="27.3"
                                    android:textColor="@color/color_theme_blue"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@color/color_theme_blue"
                                    android:gravity="center"
                                    android:text="体脂"
                                    android:textColor="@android:color/white"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/shape_bmi"
                                    android:gravity="center"
                                    android:text="22.5%"
                                    android:textColor="@color/color_theme_blue"
                                    android:textSize="11sp" />
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_reset" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="重置计划"
                                android:textColor="@color/color_theme_blue" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/tv_target_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:text="10.08"
                                android:textColor="@color/color_696969"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@id/tv_target_weight"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:background="@color/color_theme_blue"
                                    android:gravity="center"
                                    android:text="BMI"
                                    android:textColor="@android:color/white"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/shape_bmi"
                                    android:gravity="center"
                                    android:text="21.9"
                                    android:textColor="@color/color_theme_blue"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@color/color_theme_blue"
                                    android:gravity="center"
                                    android:text="体脂"
                                    android:textColor="@android:color/white"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/shape_bmi"
                                    android:gravity="center"
                                    android:text="16.3%"
                                    android:textColor="@color/color_theme_blue"
                                    android:textSize="11sp" />
                            </LinearLayout>


                        </RelativeLayout>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:src="@color/color_e2e2e2" />

                    <com.xiaoxie.weightrecord.view.MyViewPager
                        android:id="@+id/viewpagerCharts"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></com.xiaoxie.weightrecord.view.MyViewPager>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </FrameLayout>

        <!--历史-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/black">

        </android.support.v7.widget.CardView>
        <!--日历-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/black">

        </android.support.v7.widget.CardView>
        <!--图标-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/black">

        </android.support.v7.widget.CardView>
        <!--趋势分析-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/black">

        </android.support.v7.widget.CardView>
    </LinearLayout>


</ScrollView>