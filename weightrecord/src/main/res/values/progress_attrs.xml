<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="antiAlias" format="boolean" /> <!--是否开启抗锯齿-->
    <attr name="startAngle" format="float" /><!-- 圆弧起始角度，3点钟方向为0，顺时针递增，小于0或大于360进行取余 -->
    <attr name="sweepAngle" format="float" /><!--扫过的角度-->
    <attr name="animTime" format="integer" /><!--动画时间-->
    <attr name="maxValue" format="float" /><!--绘制的内容的数值的最大值-->
    <attr name="minValue" format="float" /><!--绘制的内容的数值的最小值-->

    <attr name="unit" format="string|reference" /> <!-- 绘制内容的单位 -->
    <attr name="unitSize" format="dimension" />
    <attr name="unitColor" format="color|reference" />

    <attr name="hint" format="string|reference" /> <!-- 绘制内容相应的提示语 -->
    <attr name="hintSize" format="dimension" />
    <attr name="hintColor" format="color|reference" />

    <attr name="precision" format="integer" /><!-- 精度，默认为0 -->
    <attr name="valueSize" format="dimension" />
    <attr name="valueColor" format="color|reference" />

    <attr name="arcColor1" format="color|reference" /><!-- 圆弧颜色，设置多个可实现渐变 -->
    <attr name="arcColor2" format="color|reference" />
    <attr name="arcColor3" format="color|reference" />

    <attr name="bgArcColor" format="color|reference" /> <!-- 背景圆弧颜色，默认白色 -->
    <attr name="arcWidth" format="dimension" />  <!-- 圆弧宽度 -->
    <attr name="arcColors" format="color|reference" /> <!-- 圆弧颜色， -->
    <attr name="textOffsetPercentInRadius" format="float" />  <!-- 文字的偏移量。相对于圆半径而言，默认三分之一 -->
    <declare-styleable name="progressView">
        <attr name="antiAlias" />
        <attr name="startAngle" />
        <attr name="sweepAngle" />
        <attr name="animTime" />
        <attr name="maxValue" />
        <attr name="minValue" />
        <attr name="precision" />
        <attr name="valueSize" />
        <attr name="valueColor" />
        <attr name="textOffsetPercentInRadius" />
        <attr name="hint" />  <!-- 绘制内容相应的提示语 -->
        <attr name="hintSize" />
        <attr name="hintColor" />
        <attr name="unit" /> <!-- 绘制内容的单位 -->
        <attr name="unitSize" />
        <attr name="unitColor" />
        <attr name="arcWidth" /> <!-- 圆弧宽度 -->
        <attr name="arcColors" />
        <attr name="bgArcColor" /><!-- 背景圆弧颜色 -->
        <attr name="bgArcWidth" format="dimension" /><!-- 背景圆弧宽度 -->
    </declare-styleable>
</resources>